# this rule causes a make warning, so we remove it when it is not in use
rendering.lst: Makefile $(rendering_lst_OBJECTS)
	@echo "Linking rendering.lst..."; \
	rm -f $@; touch $@; \
	for i in $(rendering_lst_OBJECTS); do echo $$i >>$@; done

install-librenderingincHEADERS: $(librenderinginc_HEADERS)
	@$(NORMAL_INSTALL)
	@if test x"$(librenderinginc_HEADERS)" = x""; then :; else \
	  echo " $(mkinstalldirs) $(DESTDIR)$(librenderingincdir)"; \
	  $(mkinstalldirs) $(DESTDIR)$(librenderingincdir); \
	fi
	@list='$(librenderinginc_HEADERS)'; for p in $$list; do \
	  if test -f "$$p"; then d=; else d="$(srcdir)/"; fi; \
	  f="`echo $$p | sed -e 's|^.*/||'`"; \
	  src="$$d$$p"; dst="$(DESTDIR)$(librenderingincdir)/$$f"; \
	  if cmp -s "$$src" "$$dst"; then :; else \
	    echo " $(INSTALL_HEADER) $$src $$dst"; \
	    $(INSTALL_HEADER) "$$src" "$$dst" || exit 1; \
	  fi \
	done
	@list='$(ObsoletedHeaders)'; for f in $$list; do \
	  file="$(DESTDIR)$(librenderingincdir)/$$f"; \
	  if test -x "$$file"; then \
	    echo " rm -f $$file"; \
	    rm -f "$$file"; \
	  fi \
	done; \
	:

if MACOSX
